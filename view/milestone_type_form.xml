<form string="Milestone Type">
    <label name="kind"/>
    <field name="kind"/>
    <label name="invoice_method"/>
    <field name="invoice_method"/>
    <label name="group"/>
    <field name="group"/>
    <group col="2" id="progress">
      <label name="trigger"/>
      <field name="trigger"/>
      <field name="trigger_progress" factor="100"/>
      <label name="trigger_progress" string="%" xalign="0.0" xexpand="0" xfill="1"/>
    </group>

    <separator id="invoicing" string="Invoicing" colspan="4"/>
    <label name="advancement_product"/>
    <field name="advancement_product"/>
    <label name="compensation_product"/>
    <field name="compensation_product"/>
    <label name="advancement_amount"/>
    <field name="advancement_amount"/>
    <label name="invoice_percent"/>
    <group col="2" id="invoice_percent" colspan="1">
        <field name="invoice_percent" factor="100"/>
        <label name="invoice_percent" string="%" xalign="0.0" xexpand="0" xfill="1"/>
    </group>
    <label name="currency"/>
    <field name="currency"/>
    <separator name="description" colspan="4"/>
    <field name="description" colspan="4"/>
    <separator id="invoice_date_calculator" colspan="4"
        string="Invoice Date calculation"/>
    <label name="months"/>
    <field name="months"/>
    <label name="month"/>
    <field name="month"/>
    <label name="weeks"/>
    <field name="weeks"/>
    <label name="weekday"/>
    <field name="weekday"/>
    <label name="days"/>
    <field name="days"/>
    <label name="day"/>
    <field name="day"/>
</form>
